@model DisplayUserTasksViewModel
@section styles
{
    <link rel="stylesheet" href="~/css/UserTasks.css" />
}

@section Scripts{
    <script src="~/js/UserTasks.js"></script>
}
<partial name="DeveloperNavbar"/>
<div class="container">
    <div class="row">
        <div class="col-12 text-center fw-bold "id="user-info-div">
        </div>
        <div class="col-12 text-center fw-bold display-6">
            Here is your Task List:
        </div>
        <div class="table-responsive">
            <form method="post" asp-action="UserTasks">
                <vc:UserTasks></vc:UserTasks>
                <input type="hidden" asp-for="@Model.completedTasksIdsJson"/>
                <div class="text-center">
                    <button type="submit" class="update-task-status-btn btn btn-outline-dark w-25">Update</button>
                </div>
            </form>
        </div>
        <div class="text-center">
            <button class="btn btn-outline-info w-25 rounded-pill">Update</button>
        </div>
    </div>

</div>
