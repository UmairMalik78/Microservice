@using ProjectManagementFrontEnd.ViewModels;
@model List<PMTaskInfo>

<div class="table-responsive">
@{
    if(@Model.Count==0){
        <h3 class="text-success">No Pending Tasks are there!!!</h3>
    }else{
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Sr</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Deadline</th>
                    <th>Username</th>
                    <th>Current Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            @{
                var index = 0;
                foreach (var userTask in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@userTask.title</td>
                        <td>@userTask.description</td>
                        <td>@userTask.deadlineDate</td>
                        <td>@userTask.assignedUsername</td>
                        @if (userTask.status == false)
                        {
                            <td class="bg-danger text-light">Not Completed</td>
                        }
                        else
                        {
                            <td class="bg-success text-light"> Completed</td>
                        }
                        <td><button class="btn btn-warning w-75" onclick="UpdatePMTask('@userTask.id')"> Update </button> </td>
                    </tr>
                    {index++;}
                }
            }
            </tbody>
        </table>
    }
}
</div>


